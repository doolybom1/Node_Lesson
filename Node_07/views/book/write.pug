extends ../layout

block content
    script.
        $(function(){
            $('.btn-delete').click(function(){
                if(confirm("삭제할까요?")){
                    document.location.replace('/book/delete/#{book._id}')
                }
            })

            $('.btn-list').click(function(){
                    document.location.replace('/book')
            })
        })



    form(method='POST').w3-container
        fieldset.w3-border-blue
            if formTitle == 'UPDATE'
                legend 도서정보수정
            else
                legend 도서정보입력
            
            - var inputClasses = ['w3-input','w3-border']
            .w3-container
                label(for="bTitle").w3-text-blue
                input#bTitle(name='bTitle',class=inputClasses, placeholder='도서명' value=book.bTitle)
            .w3-container    
                label(for="bWriter").w3-text-blue
                input#bWriter(name='bWriter',class=inputClasses, placeholder='저자' value=book.bWriter)
            .w3-container    
                label(for="bComp").w3-text-blue
                input#bComp(name='bComp',class=inputClasses, placeholder='출판사' value=book.bComp)
            .w3-container    
                label(for="bPrice").w3-text-blue
                input#bPrice(name='bPrice',class=inputClasses,placeholder='가격' value=book.bPrice)
            - var btnClasses = ['w3-button','w3-right']
                if formTitle == 'UPDATE'
                button(class=btnClasses).w3-button.w3-margin-top.w3-margin-right.w3-blue.btn-save 저장
                button(type='button',class=btnClasses).w3-margin-top.w3-margin-right.w3-red.btn-delete 삭제
                button(type='button',class=btnClasses).w3-margin-top.w3-margin-right.w3-green.btn-list 리스트